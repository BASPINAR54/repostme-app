{
  "expo": {
    "name": "RepostMe",
    "slug": "repostme",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",

    // âœ… STABLE POUR iOS
    "jsEngine": "jsc",
    "newArchEnabled": true,

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.repostme.app",
      "infoPlist": {
        "UIBackgroundModes": ["remote-notification"]
      }
    },

    "android": {
      "package": "com.repostme.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#ffffff"
      }
    },

    "notification": {
      "icon": "./assets/images/icon.png",
      "color": "#10b981",
      "iosDisplayInForeground": true,
      "androidMode": "default",
      "androidCollapsedTitle": "RepostMe"
    },

    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },

    "plugins": [
      "expo-router",
      "expo-font",
      "expo-web-browser",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon.png",
          "color": "#10b981"
        }
      ]
    ],

    "experiments": {
      "typedRoutes": true
    }
  }
}
