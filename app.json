{
  "expo": {
    "name": "RepostMe",
    "slug": "repostme",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",

    // âœ… STABLE POUR iOS
    "jsEngine": "jsc",
    "newArchEnabled": true,

    "ios": {
      "supportsTablet": true
    },

    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },

    "plugins": [
      "expo-router",
      "expo-font",
      "expo-web-browser"
    ],

    "experiments": {
      "typedRoutes": true
    }
  }
}
